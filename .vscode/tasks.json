{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run Space Invaders",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "src/*.cpp",
                "-o", "bin/space_invaders.exe",
                "-I", "C:/mingw64/include",
                "-L", "C:/mingw64/lib",
                "-lglfw3",
                "-lglew32",
                "-lopengl32",
                "-lgdi32",
                "&&",
                "./bin/space_invaders.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build and run Space Invaders with MinGW g++ (Git Bash)"
        }
    ]
}
